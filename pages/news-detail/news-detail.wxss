.wrapper {
  display: flex;
  flex-direction: column;
}
.head-img {
  width: 100%;
  height: 460rpx;
}
.author {
  display: flex;
  flex-direction: row;
  margin-left: 45rpx;
  margin-top: 40rpx;
}
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.name {
  color: #666;
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  line-height: 65rpx;
}
.text, .date {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  line-height: 70rpx;
}
.title {
  color: #333;
  font-size: 38rpx;
  font-weight: bold;
  line-height: 50rpx;
  margin-top: 30rpx;
  margin-left: 45rpx;
}
.tool {
  margin-top: 20rpx;
}
.img {
  margin-right: 40rpx;
  vertical-align: middle;
  display: flex;
  justify-content: flex-end;
}
.music {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: red;
}
.no-music {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #fff;
}
.fav {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  background-color: red;
}
.no-fav {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  background-color: #fff;
}
.share {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  background-color: #fff;
}
.line {
  width: 660rpx;
  height: 1px;
  /* box-shadow: inset 0px 1px 1px -1px #A7A7AB; */
  background-color: #e5e5e5;
  margin: 0 auto;
  vertical-align: middle;
  position: relative;
  top: -35rpx;
  z-index: -99;
}
.content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  word-break:break-all;
  line-height: 50rpx;
  margin: 20rpx 40rpx;
}
