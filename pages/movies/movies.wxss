@import '../template/template.wxss';

.search {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f2f2f2;
}
.search-icon {
  margin-top: 16rpx;
}
.search-cancel {
  margin-top: 18rpx;
  position: relative;
}
.search-cancel:before {
  position: absolute;
  content: '';
  top: -10px;
  left: -10px;
  right: -10px;
  bottom: -10px;
}
.search-text {
  width: 500rpx;
  font-size: 28rpx;
  margin: auto 0;
}
.search-box {
  position: absolute;
  top: 80rpx;
}

.wrapper {
  background-color: #f2f2f2;
}

.search-box .move {
  float: left;
  padding-bottom: 40rpx;
  width: 27%;
}
